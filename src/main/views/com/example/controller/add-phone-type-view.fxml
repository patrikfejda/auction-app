<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.text.*?>
<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.controller.AddPhoneTypeController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="mainLabel" text="ADD PHONE TYPE!"/>

    <Label text="NAME:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="name" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="SKU NAME:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="skuName" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="RAM (GB):" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="ram" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="MEMORY (GB):" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="memory" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Label text="COLOR:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="color" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <Button text="ADD PHONE TYPE" onAction="#addPhoneTypeButtonClick"/>

    <Button text="BACK" onAction="#back"/>




</VBox>
